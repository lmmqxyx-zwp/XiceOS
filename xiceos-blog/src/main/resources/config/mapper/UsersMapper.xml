<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.by.xiceos.dao.UsersDao" >
    <sql id="table_name">
        blog_users
    </sql>

    <sql id="table_column">
        uid, username, `password`, mail, url, screenname, created,activated, logged, `group`, authcode, remember
    </sql>

    <!-- 数据插入 -->
    <insert id="insert" parameterType="top.by.xiceos.vo.Users">
        INSERT INTO
        <include refid="table_name"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            username,password,
            <if test="mail != null">
                mail,
            </if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{username, jdbcType=VARCHAR},#{password, jdbcType=VARCHAR},
            <if test="mail != null">
                #{mail, jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!-- 数据查询 -->
    <select id="selectUsers" resultType="top.by.xiceos.vo.Users">
        SELECT
          <include refid="table_column"/>
        FROM
          <include refid="table_name"/>
    </select>

</mapper>